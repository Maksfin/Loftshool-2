extends ../main

block title 
	| Каталог

block content
	article.content-wrapper
		.container
			.breadcrumbs
				+ul('breadcrumbs__cat', breadList, 1, true)
			h2.headline
				| Мобильные телефоны
			.wrap-content
				include ../_common/_sidebar
				.content
					.sort
						.sort__left
							.sort__select-wrap
								.sort__title
									| Cортировать по
								.sort__select
									select.sort__select-item
										each option in options
											option(value="")= option
						.sort__right
							.sort__title.sort__title_view
								| Вид каталога
							.sort__view
								ul.sort__view-list
									each item in views
										li(class="sort__view-item"+ ' ' + "sort__view-item_" + '#{item}')
											a(href="#" class="sort__view-link" title='#{item}')= item
					.products
						ul.products__list
							-for (var i = 0; i < 9; i++)
								li.products__item
									.products__item-inner
										.products__left
											.products__slideshow
												.products__slideshow-display
													a(href="").products__slideshow-display-link
														img(src="http://lorempixel.com/500/500/technics/").products__slideshow-display-img
													ul.products__slideshow-list
														-for (var j = 0; j < 3; j++)
															li.products__slideshow-item
																a(href="#").products__slideshow-link
																	img(src="http://lorempixel.com/100/100/technics/").products__slideshow-item-img
											.products__article
												.products__article-text Артикул
												.products__article-number 359110
											.products__title
												.products__title-text Samsung GT-I9301I GALAXY S 3
											ul.products__desc-list
												-for (item in desc)
													li.products__desc-item
														.products__desc-left= item
														.products__desc-right= desc[item]
											.products__rating-wrap
												ul.products__rating-list
													-for (var c = 0; c < 4; c++)
														li.products__rating-item.products__rating-item_active
															a(href="#" class="products__raiting-link")
													li.products__rating-item
														a(href="#" class="products__raiting-link")
												.products__rating-status 4			
										.products__right
											.products__price-wrap
												.products__price 10 990 ₽
											.products__info-wrap
												a(href="#").products__btn
													| В корзину
												.products__existence
													| В наличии
					.pagination
						ul.pagination__list
							li.pagination__item
								a(href="#").pagination__link
									.pagination__value-prev
							- for (var i = 0; i < 3; i++)
								li.pagination__item
									a(href="#").pagination__link
										.pagination__value= i
							li.pagination__item
								a(href="#").pagination__link
									.pagination__value-next
